.item-header {
  width: 100%;
  padding: 40rpx 36rpx 20rpx 36rpx;
  box-sizing: border-box;
}

.item-header .item-title {
  font-size: 40rpx;
  font-weight: bold;
}

.item-header .item-detail {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left-detail {
  flex: 1;
}

.item-rate {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.item-rate .comment-persons {
  margin-left: 10rpx;
  color: #e4e4e4;
  font-size: 28rpx;
  align-items: center;
}

.left-detail .item-sub-detail {
  margin-top: 40rpx;
  font-size: 30rpx;
}

.right-detail {
  width: 200rpx;
  height: 300rpx;
}

.right-detail image {
  width: 100%;
  height: 100%;
}

.item-tags {
  padding: 0rpx 36rpx;
}

.item-tags .item-tags-title {
  color: #d3d3d3;
  font-size: 28rpx;
}

.item-tags .item-tags-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.item-tags-list text {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #353535;
  text-align: center;
}

/* 评论 */

.comment-group-list {
  width: 100%;
  padding: 50rpx 36rpx 20rpx 36rpx;
  box-sizing: border-box;
}

.comment-group-list .comment-title {
  color: #d3d3d3;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.comment-group-list .comment-group {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.comment-group .comment-left {
  width: 80rpx;
}

.comment-left .avatar {
  width: 100%;
  height: 80rpx;
  border-radius: 50%;
}

.comment-group .comment-right{
  margin-left: 18rpx;
  flex: 1;
}

.comment-right .username-rate{
  display: flex;
  align-items: center
}
.username-rate .username{
  font-size: 30rpx;
  margin-right: 16rpx;
}

.comment-time{
  margin-top: 18rpx;
  color: #d3d3d3;
  font-size: 28rpx;
}

.comment-content{
  margin-top: 18rpx;
  color: #353535;
  font-size: 28rpx;
}

.comment-more{
  margin-top: 30rpx;
  font-size: 36rpx;
  margin-bottom: 60rpx;
  text-align: center;
  color: #4eb157;
}